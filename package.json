{
  "name": "qris-eventhub",
  "version": "1.0.0",
  "description": "Backend server for Android Notification Listener app",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "cf:dev": "wrangler dev",
    "cf:deploy": "wrangler deploy",
    "cf:db:create": "wrangler d1 create notification-listener-db",
    "cf:db:init": "wrangler d1 execute notification-listener-db --file=./schema.sql",
    "cf:tail": "wrangler tail"
  },
  "keywords": [
    "notification",
    "android",
    "webhook",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "wrangler": "^4.34.0"
  }
}
